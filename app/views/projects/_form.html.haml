%section{ style: "max-width: 500px; margin: 20px auto; padding: 20px 40px; border: 1px solid #ddd; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);" }
  %h2{ style: "text-align: center; color: #333;" } Create Project

  = form_for @resource do |f|
    = f.hidden_field :user_id, value: current_user.id

    .form-group{ style: "margin-bottom: 15px;" }
      = f.label :title, "Project Title", style: "font-weight: bold;"
      = f.text_field :title, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;"

    .form-group{ style: "margin-bottom: 15px;" }
      = f.label :description, "Description", style: "font-weight: bold;"
      = f.text_area :description, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; height: 100px;"

    .form-group{ style: "text-align: center;" }
      = f.submit "Create Project", style: "background-color: #007bff; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer;"
      = link_to "Back to Projects", projects_path, style: "margin-left: 10px; color: #007bff; text-decoration: none;"
